<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.homeberry3">

    <uses-permission android:name="com.google.android.things.permission.MANAGE_INPUT_DRIVERS" />
    <uses-permission android:name="com.google.android.things.permission.USE_PERIPHERAL_IO"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/homeberry"
        android:label="HOMEBERRY"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainFanActivity"
            android:theme="@style/Theme.Design.NoActionBar">
        </activity>
        <activity android:name=".MainWindowActivity"
            android:theme="@style/Theme.Design.NoActionBar">
        </activity>
        <activity android:name=".MainDoorActivity"
            android:theme="@style/Theme.Design.NoActionBar">
        </activity>
        <activity android:name=".MainLampActivity"
            android:theme="@style/Theme.Design.NoActionBar">
            </activity>
        <activity android:name=".MainActivity"/>
        <activity android:name=".CreditActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>