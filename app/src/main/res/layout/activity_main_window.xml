<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".MainWindowActivity">

    <ImageView
        android:id="@+id/pianta"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:src="@drawable/pianta"
        />

    <ImageButton
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="175dp"
        android:background="@color/colorPrimaryDark"
        android:clickable="true"
        android:onClick="ToWindow1"
        android:padding="10dp"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:src="@drawable/icon_window" />

    <ImageButton
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="80dp"
        android:background="@color/colorPrimaryDark"
        android:clickable="true"
        android:onClick="ToWindow2"
        android:padding="10dp"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:src="@drawable/icon_window" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/pianta"
        android:layout_above="@id/navigation">
    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@color/colorPrimary"
        app:itemTextColor="#FFFFFF"
        app:itemIconSize="30dp"
        app:itemIconTint="@android:color/tab_indicator_text"
        app:menu="@menu/menu_navigation_window" />

</RelativeLayout>